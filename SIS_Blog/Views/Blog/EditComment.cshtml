@using System.Security.Claims
@{
    ViewData["Title"] = "Edit Comment";
}
@model Comment

<div class="container mt-4">
    <div class="card">

        <div class="card-header">
            <h3>Edit Comment</h3>
        </div>

        <div class="card-body">

            <form class="api-edit-comment" method="post">

                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="hidden" name="UserId" value="@Model.User_Id" />
                <input type="hidden" name="BlogpostId" value="@Model.Blogpost_Id" />
                <input type="hidden" name="CreatedAt" value="@Model.CreatedAt" />

                <div class="mb-3">
                    <label asp-for="Content" class="form-label">Content</label>
                    <textarea asp-for="Content" class="form-control" rows="3"></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Back to All Posts</a>

            </form>
        </div>
    </div>
</div>
