@{
    ViewData["Title"] = "Create Account";
}

@model SIS_Blog.Models.User

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">

                <div class="card-header">
                    <h3 class="text-center">Create Account</h3>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.Error
                    </div>
                }

                <div class="card-body">

                    <form id="register-form">

                        <div class="mb-3">
                            <label class="form-label">Username</label>
                            <input id="reg-username" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input id="reg-email" class="form-control" type="email" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input id="reg-password" class="form-control" type="password" />
                        </div>

                        <div class="d-grid">
                            <button id="register-btn" type="button" class="btn btn-primary">Register</button>
                        </div>

                    </form>
                </div>

                <div class="card-footer text-center">
                    Already have an account? <a asp-controller="User" asp-action="Login">Login here</a>
                </div>

            </div>
        </div>
    </div>
</div>
