@{
    ViewData["Title"] = "Edit post";
}
@model SIS_Blog.Models.Post

<div class="container mt-4">
    <div class="card">

        <div class="card-header">
            <h3>Edit Blog Post</h3>
        </div>

        <div class="card-body">

            <form class="api-edit-post" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="hidden" name="UserId" value="@Model.User_Id" />
                <input type="hidden" name="CreatedAt" value="@Model.CreatedAt" />

                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Content" class="form-label">Content</label>
                    <textarea asp-for="Content" class="form-control" rows="10"></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Back</a>

            </form>
        </div>
    </div>
</div>
